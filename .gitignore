# Android / Gradle / IntelliJ .gitignore
# Reference: https://github.com/github/gitignore/blob/main/Android.gitignore

# Gradle
.gradle/
**/build/
!gradle/wrapper/gradle-wrapper.jar

# Local configuration
local.properties

# Log files
*.log

# Android Studio / IntelliJ IDEA
*.iml
.idea/caches/
.idea/libraries/
.idea/modules.xml
.idea/workspace.xml
.idea/navEditor.xml
.idea/assetWizardSettings.xml
.idea/gradle.xml
.idea/misc.xml
.idea/other.xml
.idea/deploymentTargetDropDown.xml
.idea/compiler.xml
.idea/jarRepositories.xml
.idea/kotlinc.xml

# If you wish to keep shared code style or inspections, uncomment the next two lines
# !.idea/codeStyles/
# !.idea/inspectionProfiles/

# Keystores (signing)
# (Note: Do not store keystores in VCS)
*.jks
*.keystore
**/keystore/**

# Android build outputs
captures/
outputs/

# NDK / CMake
.externalNativeBuild/
.cxx/

# Gradle Scan data
.scans/

# Misc OS-specific files
.DS_Store
Thumbs.db

# Kotlin/Java
.classpath
.project
.settings/

# VS Code (if used by some contributors)
.vscode/

# Jetifier / misc
.idea/shelf/

# Google Services (if generated locally)
# google-services.json
# GoogleService-Info.plist

# Firebase/Crashlytics (build-time generated)
app/**/release/**/mapping.txt
app/**/release/**/mapping
app/**/outputs/**

# Lint
lint/intermediates/
lint/generated/
lint/outputs/

# Android test results and reports
**/reports/
**/test-results/
